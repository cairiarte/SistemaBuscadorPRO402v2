@{
    var id = (int)ViewBag.IdUsuario;
}
@model UsuarioCambioPasswordModel
<h3>Cambiar Password</h3>
<hr />
<div class="alert alert-success mt-3" role="alert">
    * La contraseña debe tener al menos una Mayuscula, minusculas, digitos y al menos 8 caracteres
</div>
<div class="card">
    <div class="card-body">
        <form action="CambiarPassword" method="post">
            <input type="hidden" name="Id" value="@id" />
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RePassword"></label>
                <input asp-for="RePassword" class="form-control" type="password" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            <button class="btn btn-primary" type="submit">Guardar</button>

        </form>
    </div>
</div>